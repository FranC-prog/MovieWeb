<!DOCTYPE html>
<html>
<head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h1>Resultado de la Búsqueda</h1>

<h2>Películas</h2>
<% if (movies.length === 0) { %>
    <p>No hay resultados.</p>
<% } else { %>
    <ul>
        <% movies.forEach((movie) => { %>
            <li><a href="/pelicula/<%= movie.movie_id %>"><%= movie.title %></a></li>
        <% }); %>
    </ul>
<% } %>
<p></p>

<h2>Actores</h2>
<% if (actors.length === 0) { %>
    <p>No hay resultados.</p>
    <img src="https://media.tenor.com/-uGxTLFIOncAAAAC/let-it-out-tiktok.gif" alt="let it out">
<% } else { %>
    <ul>
        <% actors.forEach((actor) => { %>
            <li><a href="/actor/<%= actor.person_id %>"><%= actor.person_name %></a></li>
        <% }); %>
    </ul>
<% } %>
<p></p>

<h2>Directores</h2>
<% if (directors.length === 0) { %>
    <p>No hay resultados.</p>
    <img src="https://media.tenor.com/-uGxTLFIOncAAAAC/let-it-out-tiktok.gif" alt="let it out">
<% } else { %>
    <ul>
        <% directors.forEach((director) => { %>
            <li><a href="/director/<%= director.person_id %>"><%= director.person_name %></a></li>
        <% }); %>
    </ul>
<% } %>
<p></p>

<img src="https://i.pinimg.com/originals/71/86/e2/7186e2cba6e2cdbb8a30ce117b2a1f30.gif" alt="let it out">

<div id="inicio"><a href="/">Inicio</a></div>
</body>
</html>