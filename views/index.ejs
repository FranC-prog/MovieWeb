<!DOCTYPE html>
<html>
<head>
    <title>MovieWeb</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            font-size: 36px;
            color: #333333;
            margin-bottom: 20px; /* Agregamos margen inferior para separar del input */
        }

        form {
            text-align: center;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 18px;
            margin-right: 10px;
        }

        button[type="submit"] {
            background-color: #0078d4;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        button[type="button"] {
            background-color: #d40000;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        button[type="button"]:hover {
            background-color: #a90000;
        }
        
    </style>
</head>
<body>
<h1>MovieWeb</h1>
<form id="form" action="/buscar" method="GET">
    <input id="input" type="text" name="q" placeholder="Buscar películas, actores y/o directores..." />
    <button type="submit">Buscar</button>
    <button type="button" id="searchType">⟳</button>
</form>

<script>
    var state = 0;
    document.getElementById('searchType').addEventListener('click', function() {
        // Si se toca el botón estando la búsqueda por películas, actores y/o directores,
        // entonces pasamos a buscar por palabras clave, y viceversa.
        if(state == 0) {
            document.getElementById('form').action = "/buscarClaves"; // change form action
            document.getElementById('input').placeholder = "Buscar por palabras clave..."; // change input placeholder
            state = 1;
        } else {
            document.getElementById('form').action = "/buscar"; // change form action
            document.getElementById('input').placeholder = "Buscar películas, actores y/o directores..."; // change input placeholder
            state = 0;
        }
    });
</script>

</body>
</html>
